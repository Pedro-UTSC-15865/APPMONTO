<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="APPMONTO.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="App Inversores" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Inversion 1" />
        <Entry Placeholder="Escribir el monto" x:Name="INVERSION1" Keyboard="Numeric"/>
        <Label Text="Inversion 2" />
        <Entry Placeholder="Escribir el monto" x:Name="INVERSION2" Keyboard="Numeric"/>
        <Label Text="Inversion 3" />
        <Entry Placeholder="Escribir el monto" x:Name="INVERSION3" Keyboard="Numeric"/>

        <Button Text="Calcular(%)" Clicked="Button_Clicked" />
    </StackLayout>

</ContentPage>
